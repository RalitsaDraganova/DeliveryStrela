@model IEnumerable<DeliveryStrela.Data.Product>
@inject SignInManager<User> signInManager
@using DeliveryStrela.Data
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "FilterDiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        .container2 {
            display: flex;
            max-width: 1200px;
            padding: 10px;
            overflow: auto;
            gap: 1.3rem;
        }

        .card {
            width: 350px;
        }
        .table {
            margin: 20px;
        }
    </style>
</head>
<h2>Диетична храна</h2>
<div class="text-center">
    <h1 class="display-4"></h1>
</div>
<h2>Категории</h2>
<div class="w3-main w3-content w3-padding">

    <div class="container2">

        <div class="card">
            <img src=" https://www.cakeandpancake.com/wp-content/uploads/2020/04/49659413818_d8a5664314_c.jpg" class="card-img-top" style="width:100%">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">Предястие</p>
                <a asp-controller="Products" asp-action="FilterAppetizer">Врез в категория</a>
            </div>
        </div>

        <div class="card">
            <img src="   https://live.staticflickr.com/65535/50030281913_82e0970d15_3k.jpg" class="card-img-top" style="width:100%">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">Основно</p>
                <a asp-controller="Products" asp-action="FilterMain">Врез в категория</a>
            </div>
        </div>

        <div class="card">
            <img src=" https://www.cakeandpancake.com/wp-content/uploads/2022/02/51848030201_06bc30bc5f_k.jpg" class="card-img-top" style="width:100%">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">Десерти</p>
                <a asp-controller="Products" asp-action="FilterDessert">Врез в категория</a>
            </div>
        </div>

        <div class="card">
            <img src=" https://www.cakeandpancake.com/wp-content/uploads/2022/03/51951833701_a50defa2ce_k.jpg" class="card-img-top" style="width:100%">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">Скара</p>
                <a asp-controller="Products" asp-action="FilterGrill">Врез в категория</a>
            </div>
        </div>

        <div class="card">
            <img src=" https://live.staticflickr.com/65535/51411578854_36b37a654b_h.jpg" class="card-img-top" style="width:100%">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <p class="card-text">Хляб</p>
                <a asp-controller="Products" asp-action="FilterBread">Врез в категория</a>
            </div>
        </div>

    </div>

</div>
<br /><br />
@if (signInManager.IsSignedIn(User) && User.IsInRole(RoleType.Admin.ToString()))
{
    <p>
        <a asp-action="Create">Създаване</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CatalogNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grams)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatalogNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grams)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @if (signInManager.IsSignedIn(User) && User.IsInRole(RoleType.Admin.ToString()))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактиране</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Изтриване</a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>
